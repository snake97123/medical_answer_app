<h2>薬剤師新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "pharmacists/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :pharmacist_nickname %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
   <%= f.label :number %><br />
   <%= f.text_field :number %>
   </div>

  <div class="field">
    <%= f.label :family_name%><br />
    <%= f.text_field :family_name %>
  </div>

   <div class="field">
     <%= f.label :first_name %><br />
     <%= f.text_field :first_name %>
   </div>

   <div class="field">
    <%= f.label :family_name_kana%><br />
    <%= f.text_field :family_name_kana %>
  </div>

   <div class="field">
     <%= f.label :first_name_kana %><br />
     <%= f.text_field :first_name_kana %>
   </div>

   <div class="field">
     <%= f.label :phone_number %><br />
     <%= f.text_field :phone_number %>
   </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "pharmacists/shared/links" %>
